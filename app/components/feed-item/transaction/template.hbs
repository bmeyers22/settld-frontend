<div class="item-type transaction">
  <i class="dollar icon"></i>
</div>
<div class="label image">
  {{user-image user=user}}
</div>
<div class="content">
  <div class="item-wrapper">
    <div class="info">
      <div class="summary">
        <div class="text">{{displayName}} bought {{item.title}}</div>
        <div>
          <div class="icons">
            {{#if pendingInvoice}}<i class="mini yellow clock icon"></i>{{/if}}
            {{#if rejectedInvoice}}<i class="mini red remove icon"></i>{{/if}}
            {{#if paidInvoice}}<i class="mini green check icon"></i>{{/if}}
          </div>
          {{fuzzy-time item.date}}
        </div>
      </div>
      <div class="extra text">
        {{item.description}}
      </div>
      <div class="meta">
        <a class={{if hasLikedTransaction 'like active' 'like'}} {{action 'toggleLike' bubbles=false}}>
          <i class="like icon"></i> {{numberOfLikes}} Likes
        </a>
      </div>
    </div>
  </div>
</div>
