<div class="ui big divided list">
  <div class="item">
    <i class="user icon"></i>
    <div class="content">
      <div class="ui transparent input">
        {{input class="header" value=user.firstName placeholder="First name"}}
      </div>
    </div>
  </div>
  <div class="item">
    <i class="user icon"></i>
    <div class="content">
      <div class="ui transparent input">
        {{input value=user.lastName class="header" placeholder="Last name"}}
      </div>
    </div>
  </div>
  <div class="item">
    <i class="user icon"></i>
    <div class="content">
      <div class="ui transparent input">
        {{input value=user.age class="header" placeholder="Age"}}
      </div>
    </div>
  </div>
  {{log passwordForm}}
  {{#if user.hasPassword}}
    <div class="item form">
      <div class="top-bar">
        <i class="lock icon"></i>
        <div class="content">
          <div class="header">Change Password</div>
        </div>
        {{#unless editingPassword}}
          <i class="pencil icon" {{action 'editPassword'}}></i>
        {{/unless}}
        {{#if editingPassword}}
          <i class="check green circle icon" {{action 'changePassword'}}></i>
          <i class="close icon" {{action 'closeChangePassword'}}></i>
        {{/if}}
      </div>
      {{#if editingPassword}}
        <form class="ui form password">
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Old
              </div>
              {{input value=passwordForm.oldPassword type='password' class="form-control" name="oldPassword" }}
            </div>
          </div>
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label" name="password">
                New
              </div>
              {{input value=passwordForm.newPassword type='password' class="form-control" name="newPassword" }}
            </div>
          </div>
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Confirm
              </div>
              {{input value=passwordForm.passwordConfirm type='password' class="form-control" name="passwordConfirm" }}
            </div>
          </div>
        </form>
      {{/if}}
    </div>
  {{/if}}
  <div class="item">
    <i class="facebook icon"></i>
    <div class="content">
      <div class="header">Facebook</div>
    </div>
    {{#unless user.hasFacebook}}
      <div class="ui button blue">Link</div>
    {{else}}
      <div class="ui green disabled button">Linked</div>
    {{/unless}}
  </div>
  <div class="item">
    <i class="vimeo icon"></i>
    <div class="content">
      <div class="header">Venmo</div>
    </div>
    {{#unless user.hasVenmo}}
      <div class="ui button blue" {{action 'connect' 'venmo-oauth2'}}>Link</div>
    {{else}}
      <div class="ui green disabled button">Linked</div>
    {{/unless}}
  </div>
  <div class="item">
    <i class="lock icon"></i>
    <div class="content">
      <div class="header">Privacy</div>
    </div>
    <div class="ui toggle checkbox">
      {{input name="privacy" type="checkbox" checked=hasPublicProfile}}
      <label for="privacy">{{privacyLabel}}</label>
    </div>

  </div>
</div>
