<div>
  <span>STATUS</span>
  <span>{{format-money invoicesSum}}</span>
</div>
<div class="ui middle aligned divided list">
  {{log invoices}}
  {{#each invoices as |inv|}}
    <div class="item">
      <div class="right floated content">
        <div class="currency">{{format-money inv.amount}}</div>
      </div>
      <img class="ui avatar image" src={{inv.transaction.user.image}} />
      <div class="content">
        {{inv.transaction.title}}
      </div>
    </div>
  {{/each}}
</div>
<div class="ui button positive huge" {{action 'sendPayment'}}>Pay</div>
