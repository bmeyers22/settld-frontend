<div class="form-container">
  <div class="form-wrapper">
    <h1 class="cover-heading">Settld</h1>
    <form class="ui form segment new_user" {{action 'authenticate' on='submit'}}>
      <div class="field">
        <div class="ui huge fluid icon input">
          {{input value=identification placeholder='Email' name="identification" class="form-control" autofocus="autofocus"}}
          <i class="mail icon"></i>
        </div>
      </div>
      <div class="field">
        <div class="ui huge fluid icon input">
          {{input value=password type='password' class="form-control" placeholder="Enter Password" name="password" }}
          <i class="lock icon"></i>
        </div>
      </div>
      <div class="field">
        <div class="ui fluid buttons">
          <button type="submit" class="ui submit button" {{action 'login'}}>Login</button>
          <button type="submit" class="ui green register button" {{action 'register'}}>Register</button>
        </div>
      </div>
      <div class="field">
        <div class="ui large fluid buttons">
          <button class="ui facebook button" {{ action 'login' 'facebook-oauth2' }}><i class="facebook icon"></i> Facebook</button>
          <div class="or"></div>
          <button class="ui google plus button" {{action 'googleLogin'}}><i class="google plus icon"></i> Google</button>
        </div>
      </div>
    </form>
  </div>
</div>
