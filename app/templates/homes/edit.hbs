<div class="edit-home-wrapper">
  <h1 class="ui dividing header">
    {{name}}
  </h1>
  {{#view "homes/editable-info" content=this groupBinding=this.dataGroups.info}}
    <h4 class="title">
      <i class="info icon">
        Home Info
      </i>
    </h4>
    <div class="button-container">
      <div class="ui tiny buttons save-cancel">
        <div click="'submitEdit' this target='view'" class="ui positive submit edit button">
          <i class="icon check">
          </i>
        </div>
        <div class="or">
        </div>
        <div click="'cancelEdit' this target='view'" class="ui button">
          <i class="icon close">
          </i>
        </div>
      </div>
      <h4 click="'editSection' this target='view'" class="edit-icon">
        <i class="icon pencil">
        </i>
      </h4>
    </div>
    <div class="clearfix">
    </div>
    <div class="ui divider">
    </div>
    <div class="content">
      <div class="details">
        <div class="ui one column grid">
          <div class="column">
            <span>
              Name: span.value = name
            </span>
          </div>
        </div>
        <div class="ui two column grid">
          <div class="column">
            <span>
              # of Roommates: span.value = roommateCount
            </span>
          </div>
          <div class="column">
            <span>
              Monthly Rent: span.value = rentPerMonth
            </span>
          </div>
        </div>
      </div>
      <div class="editable">
        <div class="ui form">
          <div class="field inline">
            <label>
              Name
            </label>
            <div class="ui labeled input">
              {{input type="text" name="name" value=name class="form-control"}}
            </div>
          </div>
          <div class="ui two column grid">
            <div class="column">
              <div class="field inline">
                <label>
                  Number of Roommates
                </label>
                <div class="ui labeled input">
                  {{input type="text" name="roommateCount" value=roommateCount class="form-control"}}
                </div>
              </div>
            </div>
            <div class="column">
              <div class="field inline">
                <label>
                  Monthly Rent
                </label>
                <div class="ui labeled input">
                  {{input type="text" name="rentPerMonth" value=rentPerMonth class="form-control"}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/view}}
</div>
