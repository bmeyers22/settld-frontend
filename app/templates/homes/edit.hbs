              <div class="ui labeled input">
                {{input type="text" name="city" value=city class="form-control"}}
              </div>
            </div>
          </div>
          <div class="four wide column">
            <div class="inline">
              field label State div.ui.state-dropdown.selection.dropdown tabindex="4" 	= input type="hidden" name="state"	= input type="hidden" name="state" value=state	div.default text		i.dropdown icon	div.menu		each state in Enums.USStates		div.item data-value=(state.alpha-2 
